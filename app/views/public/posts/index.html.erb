<div class="posts_index">
	<div class="col-md-2">
		<% if user_signed_in? %>
			<%= render 'public/users/profile', user: current_user %>
		<% else %>
			<div id="container">
				<div id="theTarget">
					<div class="image1"></div>
					<div class="image2"></div>
					<div class="image3"></div>
					<div class="image4"></div>
					<div class="image5"></div>
					<div class="image6"></div>
				</div>
			</div>
		<% end %>
	</div>

	<div class="col-md-6">
		<div class="row">
			<h2 class="col-md-3 text-center">Posts</h2>

			<!-- 検索フォーム -->
			<%= search_form_for @q do |f| %>
				<div class="col-md-8 text-right posts_search">
					<%= f.search_field :title_or_category_name_cont, placeholder: 'タイトル or カテゴリー' %>

					<%= f.submit '検索', class: 'posts_search_btn' %>
				</div>
			<% end %>
		</div>

		<div>
			<!-- 投稿一覧 -->
			<%= render 'public/posts/index', posts: @posts %>
		</div>
	</div>
	<div class="col-md-2">
		<%= render 'public/categories/category', categories: @categories %>
	</div>
</div>