<div class="users_index">
	<div class="col-md-4">
		<%= render 'public/users/profile', user: current_user %>
	</div>

	<div class="col-md-8">
		<h2>Users</h2>

		<table class="users_index_table">
			<thead>
				<tr>
					<th class="text-center">Users</th>
					<th></th>
					<th></th>
				</tr>
			</thead>

			<tbody class="text-center">
				<!-- ユーザー 一覧 -->
				<% @users.each do |user| %>
					<tr>
						<td>
							<%= link_to user_path(user) do%>
								<%= render 'public/users/profile_image', user: user %>
							<% end %>
						</td>
						<td><%= link_to user_path(user) do%>
								<div class="users_index_name">
									<%= user.username %>
								</div>
							<% end %>
						</td>
						<td class="u_index_btn"><%= link_to 'following', posts_path, type: 'button', class: 'btn btn-default' %></td>
					</tr>
				<% end %>
			</tbody>
		</table>
	</div>
</div>