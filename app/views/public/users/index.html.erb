<div class="users_index">
	<div class="col-md-2">
		<%= render 'public/users/profile', user: current_user %>
	</div>

	<div class="col-md-5">
		<div class="row">
			<h2 class="col-md-4 text-center">Users</h2>

			<!-- 検索フォーム -->
			<%= search_form_for @q do |f| %>
				<div class="col-md-8 text-right users_search">
					<%= f.search_field :username_cont, placeholder: 'ユーザー名' %>

					<%= f.submit '検索', class: 'users_search_btn' %>
				</div>
			<% end %>
		</div>
		<!-- ユーザー 一覧 -->
		<%= render 'public/users/index', users: @users %>
	</div>
</div>