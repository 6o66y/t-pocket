<div class="col-md-4">
	<%= render 'public/users/profile', user: @user %>
</div>

<div class="col-md-8">
	<h2>Posts</h2>

	<table>
		<thead>
			<tr>
				<th>Titles</th>
				<th>Categories</th>
				<th>Comments</th>
				<th>Likes</th>
			</tr>
		</thead>

		<tbody>
			<% @user.posts.each do |user_post| %>
				<tr>
					<td><%=link_to user_post.title, post_path(user_post) %></td>

					<td><%#= user.post.category %></td>

					<td><%#= user_post.commests.count %></td>
					<td><%#= user_post.likes.count %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
</div>

