<div class="container sign_in">
  <div class="row">
    <h2 class="text-center">サインイン</h2>
  </div>

  <p class="error_messages"><%= alert %></p>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

    <div class="row">
      <table class="col-md-11 sign_in_table">
        <tr>
          <th class="col-md-3 text-right"><%= f.label 'ユーザー名' %></th>
          <td class="col-md-3"><%= f.text_field :username, autofocus: true, autocomplete: "username" %></td>
        </tr>

        <tr>
          <th class="col-md-3 text-right"><%= f.label 'パスワード' %></th>
          <td class="col-md-3"><%= f.password_field :password, autocomplete: "current-password" %></td>
        </tr>

        <tr>
          <th class="col-md-3 text-right"></th>
          <td class="col-md-3">
            <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me %>
              <%= f.label :サインインを保持する %>
            <% end %>
          </td>
        </tr>
      </table>
    </div>

    <div class="row text-center">
      <%= f.submit "サインイン", class: 'btn sigh_in_btn' %>
    </div>
  <% end %>
  <div class="row text-center">
    <%= render "devise/shared/links" %>
  </div>
</div>